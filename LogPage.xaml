<Window x:Class="Technika.LogPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="300" Width="400">
    <Grid Background="#F0F0F0">
        <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <StackPanel Margin="20">
            <Grid Margin="0,20,0,0">
                <TextBox Name="UsernameTextBox" Height="30"/>
                <TextBlock Text="Имя пользователя" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </Grid>
            <Grid Margin="0,20,0,0">
                <PasswordBox Name="PasswordBox" Height="30"/>
                <TextBlock Text="Пароль" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </Grid>
            <Button Content="Войти" Click="LogButton_Click" Margin="0,20,0,0" Height="40" Background="#2196F3" Foreground="White" FontSize="16"/>
        </StackPanel>
        <Button Content="Домой" Click="HomeButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Height="40" Background="#FF9800" Foreground="White" FontSize="16"/>
    </Grid>
</Window>