<Window x:Class="Technika.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="332" Width="310">
    <Grid Background="#F0F0F0" Margin="0,0,0,-6">
        <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <Button Content="Домой" Click="HomeButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Height="40" Background="#FF9800" Foreground="White" FontSize="16"/>
        <StackPanel Margin="20">
            <Grid Margin="0,20,0,0">
                <TextBox Name="UsernameTextBox" Height="30"/>
                <TextBlock Text="Имя пользователя" Foreground="Gray" VerticalAlignment="Top" Margin="5,55,0,0"/>
            </Grid>
            <Grid Margin="0,20,0,0">
                <PasswordBox Name="PasswordBox" Height="30"/>
                <TextBlock Text="Пароль" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </Grid>
            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Margin="0,20,0,0" Height="40" Background="#4CAF50" Foreground="White" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>