<Window x:Class="Technika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главная страница" Height="450" Width="800">
    <Grid Background="#F0F0F0">
        <TextBlock Text="Добро пожаловать в магазин!" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0"/>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" Height="247" Margin="0,139,0,0">
            <Button Content="Регистрация" Click="RegisterButton_Click" Margin="10" Height="40" Background="#4CAF50" Foreground="White" FontSize="16"/>
            <Button Content="Авторизация" Click="LoginButton_Click" Margin="10" Height="40" Background="#2196F3" Foreground="White" FontSize="16"/>
            <Button Content="Просмотр товаров" Click="ProductsButton_Click" Margin="10" Height="40" Background="#3F51B5" Foreground="White" FontSize="16"/>
            <Button Content="Корзина" Click="CartButton_Click" Margin="10" Height="40" Background="#FF9800" Foreground="White" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>