<Window x:Class="Technika.CartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Корзина" Height="403" Width="640">
    <Grid Background="#F0F0F0" Margin="0,0,0,16">
        <TextBlock Text="Корзина" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <ListView Name="CartListView" Margin="20,60,20,60"/>
        <Button Content="Оформить заказ" Click="CheckoutButton_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,20" Height="40" Background="#FF9800" Foreground="White" FontSize="16"/>
        <Button Content="Домой" Click="HomeButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Height="40" Background="#FF9800" Foreground="White" FontSize="16"/>
    </Grid>
</Window>