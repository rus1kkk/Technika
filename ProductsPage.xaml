<Window x:Class="Technika.ProductsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товары" Height="445" Width="600">
    <Grid Background="#F0F0F0" Margin="0,0,10,-6">
        <TextBlock Text="Список товаров" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <StackPanel Margin="20,20,20,65">
            <Grid Margin="0,10,0,10">
                <TextBox Name="FilterTextBox" Height="30" Margin="0,28,0,-28"/>
                <TextBlock Text="Введите название товара для фильтрации" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </Grid>
            <Button Content="Фильтровать" Click="FilterButton_Click" Height="30" Background="#2196F3" Foreground="White"/>
        </StackPanel>

        <ListView Name="ProductsListView" Margin="20,60,20,60">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="{Binding Name}" Width="200" />
                        <TextBlock Text="{Binding Price}" Width="100" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Content="Назад на главную" Click="BackButton_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,20" Height="40" Background="#FF9800" Foreground="White" FontSize="16"/>
    </Grid>
</Window>